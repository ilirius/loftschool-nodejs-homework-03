root = true

[*]
insert_final_newline = true
end_of_line = lf
charset = utf-8

[*.{js,jsx,json,ts,tsx}]
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

[*.md]
trim_trailing_whitespace = false

[*.[s]css]
trim_trailing_whitespace = true
indent_style = tab
indent_size = 2

[*.php]
trim_trailing_whitespace = true
indent_style = tab
indent_size = 4
